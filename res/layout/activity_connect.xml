<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroundColor"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/bonjour"
        android:textColor="@color/tvColor"
        android:textSize="@dimen/tvHeaderSize" />

    <TextView
        android:id="@+id/textUserNameConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tvColor"
        android:textSize="@dimen/tvHeaderSize" />

    <Button
        android:id="@+id/buttonEnvoyerMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/buttoncustom"
        android:text="@string/sendMessage"
        android:textColor="@color/btnColor"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonListeMessage"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttoncustom"
        android:text="@string/listMessage"
        android:textColor="@color/btnColor"
        android:textSize="20sp" />

</LinearLayout>